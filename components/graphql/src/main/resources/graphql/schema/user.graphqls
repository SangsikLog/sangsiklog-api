extend type Query {
    getUser(userId: Long!): User @authenticate @authorize(role: "user", permission: "read_user")
}

extend type Mutation {
    createUser(name: String!, email: String!, password: String!): User

    updateUser(userId: Long!, name: String): User @authenticate @authorize(role: "user", permission: "update_user")
}

type User {
    id: Long!
    name: String!
    email: String!
}

type UserLoginHistory {
    id: Long!
    userId: Long!
    loginTime: DateTime
    ipAddress: String
}